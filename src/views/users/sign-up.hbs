<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4">
            <div class="card-header h5">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/sign-up" method="POST">

                    <div class="form-group">
                        <input type="text" class="form-control"
                        placeholder="Name" name="name" value={{ name }}>
                    </div>
                    <div class="form-group mt-3">
                        <input type="email" class="form-control"
                        placeholder="Email" name="email" value={{ email }}>
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control"
                        placeholder="Password" name="password" value={{ password }}>
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control"
                        placeholder="Confirm Password" name="confirm_password" value={{ confirm_password }}>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary btn-block">
                            SignUp
                        </button>
                    </div>

               </form>
            </div>
        </div>
    </div>
</div>